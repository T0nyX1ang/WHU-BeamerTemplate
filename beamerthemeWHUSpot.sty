			\fill[rotate=-(\x - 1) * 72-6,\sakurainnercolor,opacity=.65] (0,\sakurayoffset *0.25) circle (1.2pt);
			\fill[rotate=-(\x - 1) * 72+6,\sakurainnercolor,opacity=.65] (0,\sakurayoffset *0.25) circle (1.2pt);
			\fill[\sakurakernelcolor,opacity=.75] (0,0) circle (2.2pt);
		}
	\end{tikzpicture}
}

