\setbeamertemplate{qed symbol}
{
	\begin{tikzpicture}[scale=.05]
		\foreach \x in {1,...,5}			
		{
			\filldraw[out=\sakuraoutangle,in=\sakurainangle,rotate=-(\x - 1) * 72,\sakuraoutercolor] (0,0) to (\sakuraxoffset,\sakurayoffset);
